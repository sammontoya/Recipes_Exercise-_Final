
<p id="notice"><%= notice %></p>


<h1 class="bigfont maincolor">All Recipes</h1>
<div id="newest_recipes">



  <% if !@newest_recipe.nil? %>
  <h3>Try Our Newest Recipes:</h3>
    <ul>
      <li> <%= @newest_recipe.title %></li>
      <li><%= link_to image_tag(@newest_recipe.image.url(:large)), @newest_recipe.image.url %></li>
    </ul>
  <% else %>
    <h3>No Recipes Found</h3>
  <% end %>

</div>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Author</th>
      <th>Ingredients</th>
      <th>Instructions</th>
      <th>Average Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.title %></td>
        <td><%= link_to image_tag(recipe.image.url(:small)), recipe.image.url %></td>
        <td><%= recipe.author %></td>
        <td><%= recipe.ingredients %></td>
        <td><%= recipe.instructions %></td>

        <td>
          <% if !recipe.ratings.empty? %>
            <%= recipe.average_rating %>
          <% else %>
            <%= 'Not rated yet' %>
          <% end %>
        </td>
        <td><%= link_to 'Show', recipe %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Recipe', new_recipe_path %> |
